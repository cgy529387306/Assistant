<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F8F8F8"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="申请人信息"
            android:paddingLeft="16dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:textColor="#000000"
            android:textSize="16sp"/>
        <include layout="@layout/common_divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="姓名"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:maxLength="10"
                android:background="@null"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:inputType="text"
                android:hint="请输入"
                android:textColor="#333333"
                android:gravity="center_vertical|right"
                android:textColorHint="@color/base_gray"
                android:textSize="13sp" />
        </LinearLayout>

        <include layout="@layout/common_divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="手机号码"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/et_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:maxLength="11"
                android:background="@null"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:inputType="number"
                android:hint="请输入"
                android:textColor="#333333"
                android:gravity="center_vertical|right"
                android:textColorHint="@color/base_gray"
                android:textSize="13sp"
                android:text=""/>
        </LinearLayout>

        <include layout="@layout/common_divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="申请时间"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="#333333"
                android:gravity="center|right"
                android:textSize="13sp"
                android:text="2019-06-03"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F8F8F8"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="申请物资"
            android:paddingLeft="16dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:textColor="#000000"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#F6F6F6"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="序号"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="名称"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="类别"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="数量"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="单价"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="12sp"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_goods"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F8F8F8"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="审批信息"
            android:paddingLeft="16dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:textColor="#000000"
            android:textSize="16sp"/>
        <include layout="@layout/common_divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="审批人"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_select_approval"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:drawableRight="@mipmap/icon_arraw_right"
                android:singleLine="true"
                android:drawablePadding="10dp"
                android:text="请选择"
                android:textColor="@color/base_gray"
                android:gravity="center_vertical|right"
                android:textSize="13sp" />
        </LinearLayout>
        <include layout="@layout/common_divider"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="备注"
            android:paddingLeft="16dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:textColor="#ff333333"
            android:textSize="13sp"/>

        <EditText
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="100"
            android:background="@null"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:hint="请输入"
            android:textColor="#333333"
            android:textColorHint="@color/base_gray"
            android:textSize="13sp"
            android:text=""/>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/border_btn_bg_login"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>