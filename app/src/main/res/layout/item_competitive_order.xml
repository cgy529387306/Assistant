<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/icon_dingdan"/>

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-05-16"/>

        <TextView
            android:id="@+id/tv_order_state"
            android:textSize="14sp"
            android:padding="5dp"
            android:textColor="#E8772B"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="未派单"/>

    </LinearLayout>

    <include layout="@layout/common_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="13sp"
            android:textColor="#999999" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:text="陈秋梅"
            android:layout_marginLeft="16dp"
            android:textSize="13sp"
            android:textColor="#333333" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textSize="13sp"
            android:gravity="right"
            android:textColor="#999999" />
        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:text="15394414300"
            android:layout_marginLeft="16dp"
            android:textSize="13sp"
            android:textColor="#333333" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            android:textSize="13sp"
            android:textColor="#999999" />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:text="福州市鼓楼区XXX"
            android:layout_marginLeft="16dp"
            android:textSize="13sp"
            android:textColor="#333333" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宽带"
            android:textSize="13sp"
            android:textColor="#999999" />
        <TextView
            android:id="@+id/tv_kd"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:text="电信-2019-05-16到期"
            android:layout_marginLeft="16dp"
            android:textSize="13sp"
            android:textColor="#333333" />
    </LinearLayout>

    <include layout="@layout/common_divider"/>

    <LinearLayout
        android:id="@+id/lly_operate"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ywfg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="已覆盖-异网"
            android:textSize="12sp"
            android:textColor="#999999" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:text="查看"
            android:background="@drawable/order_border_gray"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#999999" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:text="派单"
            android:layout_marginLeft="12dp"
            android:background="@drawable/order_border_blue"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#0080CC" />

    </LinearLayout>

</LinearLayout>