<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F8F8F8"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工单状态"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_status1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="43dp"
                    android:src="@mipmap/icon_status_on"/>
                <View
                    android:id="@+id/v_status1"
                    android:layout_width="84dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:background="#0080CC"/>
                <ImageView
                    android:id="@+id/iv_status2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/icon_status_off"/>
                <View
                    android:id="@+id/v_status2"
                    android:layout_width="84dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:background="#E1E1E1"/>
                <ImageView
                    android:id="@+id/iv_status3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/icon_status_off"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="派单"
                    android:layout_marginLeft="45dp"
                    android:textColor="#0080CC"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="处理"
                    android:layout_marginLeft="104dp"
                    android:textColor="#0080CC"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成"
                    android:layout_marginLeft="104dp"
                    android:textColor="#0080CC"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_status1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未派单"
                    android:layout_marginLeft="41dp"
                    android:textColor="#999999"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/tv_status2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未开始"
                    android:layout_marginLeft="97dp"
                    android:textColor="#999999"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/tv_status3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="97dp"
                    android:text="未完成"
                    android:textColor="#999999"
                    android:textSize="11sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F8F8F8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="客户概况"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_arrow_up"/>
            </LinearLayout>

            <include layout="@layout/common_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="姓名"
                    android:gravity="center"
                    android:textColor="#999999"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="陈秋梅"
                    android:gravity="center|right"
                    android:textColor="#333333"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="手机号码"
                    android:gravity="center"
                    android:textColor="#999999"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="15394414300"
                    android:gravity="center|right"
                    android:textColor="#333333"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拨打"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/order_border_blue"
                    android:gravity="center"
                    android:drawableLeft="@mipmap/icon_call"
                    android:drawablePadding="4dp"
                    android:textSize="11sp"
                    android:textColor="#0080CC" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="地址"
                    android:gravity="center"
                    android:textColor="#999999"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="鼓楼区凤湖新城"
                    android:gravity="center|right"
                    android:textColor="#333333"
                    android:textSize="13sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_navigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="导航"
                    android:background="@drawable/order_border_blue"
                    android:gravity="center"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@mipmap/icon_location"
                    android:textSize="11sp"
                    android:textColor="#0080CC" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="手机总数"
                    android:gravity="center|left"
                    android:textColor="#999999"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_tel_num"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="异网号码1"
                    android:gravity="center"
                    android:textColor="#999999"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="14785296332"
                    android:gravity="center|right"
                    android:textColor="#333333"
                    android:textSize="13sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F8F8F8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="宽带情况"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:src="@mipmap/icon_arrow_down"/>
            </LinearLayout>
            <include layout="@layout/common_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="移动宽带是否覆盖"
                        android:gravity="center_vertical"
                        android:textColor="#999999"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/tv_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:gravity="center_vertical|right"
                        android:textColor="#333333"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="50dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="是否有异网宽带"
                        android:gravity="center_vertical"
                        android:textColor="#999999"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/tv_network"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:gravity="center_vertical|right"
                        android:textColor="#333333"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="异网宽带运营商"
                        android:gravity="center_vertical"
                        android:textColor="#999999"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/tv_operator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:gravity="center_vertical|right"
                        android:textColor="#333333"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="50dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="异网宽带是否融合"
                        android:gravity="center_vertical"
                        android:textColor="#999999"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/tv_together"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:gravity="center_vertical|right"
                        android:textColor="#333333"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="异网宽带到期时间"
                    android:gravity="center"
                    android:textColor="#999999"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/tv_due_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="2019-06-03"
                    android:gravity="center|right"
                    android:textColor="#333333"
                    android:textSize="13sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F8F8F8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="录入情况"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:src="@mipmap/icon_arrow_down"/>
            </LinearLayout>
            <include layout="@layout/common_divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="区县"
                        android:gravity="center|left"
                        android:textColor="#999999"
                        android:textSize="13sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="录入人员"
                        android:gravity="center"
                        android:textColor="#999999"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="福州市"
                        android:gravity="center|right"
                        android:textColor="#333333"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/tv_code"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="工号123456"
                        android:gravity="center|right"
                        android:textColor="#333333"
                        android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="营销部"
                        android:gravity="center|left"
                        android:textColor="#999999"
                        android:textSize="13sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="录入时间"
                        android:gravity="center|left"
                        android:textColor="#999999"
                        android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dep"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|right"
                        android:text="鼓楼一部"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_input_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="2019-06-03"
                        android:gravity="center|right"
                        android:textColor="#333333"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="备注"
                android:paddingLeft="16dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:textColor="#999999"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="无"
                android:paddingLeft="16dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:textColor="#333333"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:text="照片"
                android:textColor="#999999"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:background="#0080CC"
                android:text="派单"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>