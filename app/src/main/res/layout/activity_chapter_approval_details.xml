<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F8F8F8"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="申请人信息"
                android:paddingLeft="16dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <include layout="@layout/common_divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="姓名"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="王五"
                    android:gravity="center|end"
                    android:textColor="#333333"
                    android:textSize="13sp"/>
            </LinearLayout>

            <include layout="@layout/common_divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="手机号码"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="15394414300"
                    android:gravity="center|end"
                    android:textColor="#333333"
                    android:textSize="13sp"/>
            </LinearLayout>

            <include layout="@layout/common_divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="申请时间"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:gravity="center|right"
                    android:textSize="13sp"
                    android:text="2019-06-03"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F8F8F8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="申请物资"
                android:paddingLeft="16dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#F6F6F6"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="序号"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="名称"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="类别"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="数量"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="单价"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="12sp"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_goods"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F8F8F8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="审批信息"
                android:paddingLeft="16dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <include layout="@layout/common_divider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="备注"
                android:paddingLeft="16dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:textColor="#ff333333"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="无"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="9dp"
                android:textColor="#333333"
                android:textSize="13sp"/>

            <include layout="@layout/common_divider"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审批状态"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="43dp"
                    android:src="@mipmap/icon_status_on"/>
                <View
                    android:layout_width="68dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:background="#0080CC"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/icon_status_off"/>
                <View
                    android:layout_width="68dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:background="#E1E1E1"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="42dp"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/icon_status_off"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="发起申请"
                    android:gravity="center"
                    android:textColor="#0080CC"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="处理"
                    android:gravity="center"
                    android:textColor="#0080CC"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="完成"
                    android:gravity="center"
                    android:textColor="#0080CC"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="未派单"
                    android:gravity="center"
                    android:textColor="#999999"
                    android:textSize="11sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="未开始"
                    android:gravity="center"
                    android:textColor="#999999"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="未完成"
                    android:gravity="center"
                    android:textColor="#999999"
                    android:textSize="11sp" />
            </LinearLayout>
            <include layout="@layout/common_divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:text="退回"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#F14F4F"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:text="拒绝"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#0080CC"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:text="同意"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>