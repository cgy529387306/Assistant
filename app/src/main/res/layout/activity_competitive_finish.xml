<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F8F8F8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="处理结果"
                android:textColor="#ff333333"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:text="是"
                android:background="@drawable/goods_input_border_left_blue"
                android:gravity="center"
                android:textColor="#ff333333"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:text="否"
                android:gravity="center"
                android:background="@drawable/goods_input_border_right_gray"
                android:textColor="#ff333333"
                android:textSize="13sp"/>
        </LinearLayout>
        <include layout="@layout/common_divider"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="备注"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textColor="#000000"
            android:textSize="13sp"/>
        <EditText
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:minHeight="120dp"
            android:background="@drawable/border_grey_edit"
            android:inputType="text"
            android:gravity="left|top"
            android:hint="请输入"
            android:textColor="#333333"
            android:textColorHint="@color/base_gray"
            android:textSize="13sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:text="上传照片"
            android:textColor="#ff333333"
            android:textSize="13sp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/border_btn_bg_login"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>